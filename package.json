{
  "name": "abell-monorepo",
  "version": "0.0.1",
  "description": "Abell is a static blog generator that generates blog in Vanilla JavaScript",
  "private": "true",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/saurabhdaware"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "abell-renderer": "yarn workspace abell-renderer",
    "ar": "yarn workspace abell-renderer",
    "ae": "yarn workspace abell-examples",
    "test:unit": "jest ./tests/",
    "test:e2e": "jest ./examples/",
    "test": "jest --silent",
    "tsc": "tsc",
    "eslint": "eslint packages/**/src/**/ --ext .ts,.js",
    "prettier": "prettier --write \"packages/**/src/**/*.[jt]s\"",
    "format": "npm run prettier",
    "prepublishOnly": "npm run eslint && npm test"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.6.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo Have a nice day!"
    }
  }
}
