  "dependencies": {
    "abell-renderer": "^0.1.3",
    "browser-sync": "^2.26.7",
    "chokidar": "^3.3.1",
    "commander": "^5.0.0",
    "markdown-it": "^10.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
