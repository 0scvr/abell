{
  "name": "abell",
  "version": "0.3.0",
  "description": "Abell is a static blog generator that generates blog in Vanilla JavaScript",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/saurabhdaware"
  },
  "main": "src/main.js",
  "bin": {
    "abell": "bin/abell.js"
  },
  "scripts": {
    "test:unit": "mocha --recursive \"./tests/unit-tests/**/*.js\"",
    "test:e2e": "cypress run",
    "test": "echo \" \n\n>> Make sure you're running 'npm run test-server'\n\n\n \" && npm run test:unit && npm run test:e2e",
    "start": "cd demo && node ../bin/abell.js build && serve dist",
    "test-server": "node tests/cypress/scripts/build-all-examples.js && serve tests/cypress/examples/",
    "dev": "echo \"1. Execute 'npm link' \n2. 'cd demo'\n3. 'abell serve' \"",
    "eslint": "eslint .",
    "prettier": "prettier --write \"**/*.js\"",
    "format": "npm run prettier",
    "cy": "cypress open",
    "prepublishOnly": "npm run eslint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abelljs/abell.git"
  },
  "keywords": [],
  "author": "saurabhdaware",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abelljs/abell/issues"
  },
  "homepage": "https://abelljs.org",
  "dependencies": {
    "abell-renderer": "^0.1.12",
    "chokidar": "^3.4.0",
    "commander": "^5.0.0",
    "remarkable": "^2.0.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cypress": "^4.8.0",
    "eslint": "^7.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^9.0.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && eslint . --fix && npm run eslint"
    }
  }
}