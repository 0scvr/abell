{
  "name": "abell",
  "version": "0.2.1",
  "description": "Abell is a static blog generator that generates blog in Vanilla JavaScript",
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/saurabhdaware"
  },
  "main": "dist/index.js",
  "bin": {
    "abell": "dist/index.js"
  },
  "scripts": {
