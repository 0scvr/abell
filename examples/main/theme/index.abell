<!DOCTYPE html>
<html>
  <head>
    <title>{{ globalMeta.siteName }}</title>
  </head>
  <body>
    <section>
      <h2>Content</h2>
      {{
        $contentArray
          .map(meta => `
            <div>
              ${meta.title}
              <a href="${meta.$path}/">${meta.$path}</a>
            </div>
          `)
          .join('')
      }}
    </section>
  </body>
</html>
